<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <size android:width="@dimen/dp_100" android:height="@dimen/dp_32" />
            <solid android:width="@dimen/dp_1" android:color="#1C000000" />
            <corners android:radius="@dimen/dp_56" />
            <stroke android:width="@dimen/dp_8" android:color="@android:color/transparent" />
        </shape>
    </item>

    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <size android:width="@dimen/dp_100" android:height="@dimen/dp_32" />
            <solid android:width="@dimen/dp_1" android:color="@color/color_bg_track" />
            <corners android:radius="@dimen/dp_56" />
            <stroke android:width="@dimen/dp_8" android:color="@android:color/transparent" />
        </shape>
    </item>

</selector>
